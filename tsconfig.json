{
    "compilerOptions": {
        "target": "ES2016",
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowArbitraryExtensions": true,
        "declaration": true,
        "outDir": "./dist",
        "removeComments": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    },
}
