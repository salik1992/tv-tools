{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declaration": false,
		"isolatedModules": true,
	},
	"include": ["src", "index.d.ts"],
	"ts-node": {
		"esm": true,
		"compilerOptions": {
			"target": "es5",
			"module": "Commonjs",
			"skipLibCheck": true,
			"allowSyntheticDefaultImports": true,
			"esModuleInterop": true,
			"moduleResolution": "node16",
			"allowImportingTsExtensions": true,
			"isolatedModules": true,
			"noEmit": true,
		},
		"include": ["webpack.config.ts"]
	}
}
